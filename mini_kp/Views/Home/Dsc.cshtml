@model IEnumerable<mini_kp.Models.Film>

@{
    ViewData["Title"] = "DESC";
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $("#Input").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#table tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
<h1>DESC</h1>
<div class="row">
    <div class="form-group col-5">
        <input class="form-control" id="Input" type="text" placeholder="Films..">
    </div>
    <div class="ml-md-auto">
        <div class="form-group mr-2">
            <div class="accordion" id="accordionExample">
                <div class="card">
                    <div class="card-header" style="padding: 0" id="headingOne">
                        <h2 class="mb-0">
                            <button class="btn btn-block dropdown-toggle" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Genres
                            </button>
                        </h2>
                    </div>

                    <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
                        <div class="card-body" style="padding: 0">
                            @foreach (var g in ViewBag.Genres)
                            {
                                string genre = g.Name;
                                <a>@Html.ActionLink(genre, "SearchGenre", new { id = g.Id }, new { @class = "btn card-text" })</a>
                                <br />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group mr-2">
        <div class="form-group mr-2">
            <a class="btn btn-block" asp-area="" asp-controller="Home" asp-action="Asc">Asc</a>
        </div>
    </div>
</div>
<br />
<table class="table" id="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ru_name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Year)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tagline)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age_rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KP_rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IMDB_rate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ru_name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Year)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tagline)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age_rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.KP_rate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IMDB_rate)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
